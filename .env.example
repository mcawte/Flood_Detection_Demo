# Sentinel Hub Configuration (required for satellite data)
SH_CLIENT_ID=your_sentinel_hub_client_id_here
SH_CLIENT_SECRET=your_sentinel_hub_client_secret_here

# MinIO Configuration (object storage)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
# MINIO_PREDICTIONS_BUCKET=flood-predictions
# MINIO_MODELS_BUCKET=flood-models
# MINIO_REGION=us-east-1
# MINIO_VERIFY_SSL=false

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/flood-detection
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# OpenRouteService Routing API
ORS_API_KEY=your_openrouteservice_api_key_here

# Backend Configuration
BACKEND_MCP_URL=http://localhost:8080
PYTHONPATH=/app
MODEL_CONFIG_FILE=config_granite_geospatial_uki_flood_detection_v2.yaml
MODEL_CHECKPOINT_FILE=granite_geospatial_uki_flood_detection_v2.ckpt

# Development Settings
LOG_LEVEL=INFO
DEBUG=false

